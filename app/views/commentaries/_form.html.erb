<%= simple_form_for [@post, @post.commentaries.build] do |f| %>
  <div class='field'>
    <div class="control">
      <%= f.text_area :body, class: 'textarea', placeholder: t('Type your commentary here') %>
    </div>
  </div>
  <div class="columns">
    <div class="column is-3 is-offset-4">
      <div class='actions'>
        <%= f.button :submit, t('Create comentary'), class: 'button is-info commentary-button' %>
      </div>
    </div>
  </div>
<% end %>
