<section class="section">
  <p id="notice"><%= notice %></p>

  <h1 class="title">
    <%= @post.title %>
  </h1>

  <div class="has-text-centered">
    <p>
      <%= image_tag @post.cover, size: '700x700' %>
    </p>
  </div>

  <div class="columns has-text-justified">
    <div class="column is-8 is-offset-2">
      <div class="content">
        <p class="subtitle">
          <strong>
            <%= @post.resume %>
          </strong>
        </p>

        <p class="subtitle">
          <%= @post.body %>
        </p>
      </div>
      <% if @post.user == current_user %>
        <%= link_to t('Edit'), edit_post_path(@post), class: 'button is-info is-light' %>
        <%= link_to t('Destroy'), @post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-danger' %>
      <% end %>
    </div>
  </div>
  <hr>
  <h2 class="title is-3"><%= t('Add a comment') %></h2>

  <div class="container">
    <%= render 'commentaries/form' %>
  </div>

  <hr>

  <h2 class="title is-3"><%= t('Commentaries') %></h2>

  <div class="has-text-justified">
    <%= render @post.commentaries %>
  </div>

  <br>
</section>
